<!DOCTYPE html>
<html lang="de">
  <%= render 'layouts/head' %>

  <body>
    <%= render 'layouts/topnav' %>

    <div class="container" id="main-content">
      <div class="row">
<%- if current_user.present? -%>
        <div class="col-md-9">
          <%= render 'layouts/flash' %>
          <%= yield %>
        </div>
        <div class="well col-md-3">
          <%= render 'layouts/sidebar' %>
        </div>
<%- else -%>
        <div class="col-md-12">
          <%= render 'layouts/flash' %>
          <%= yield %>
        </div>
<%- end -%>
      </div>
    </div>

    <%= render 'layouts/footer' %>
  </body>
</html>
